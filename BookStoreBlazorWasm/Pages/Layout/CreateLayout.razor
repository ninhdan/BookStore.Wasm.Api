
@inherits LayoutBase
@attribute [Authorize("Admin")]

 <Modal Title="Add New Layout">
        <EditForm Model="@newLayout" OnValidSubmit="@AddNewLayout">
            <DataAnnotationsValidator />

            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col">
                        <label for="layoutName" class="form-label">Layout Name</label>
                        <InputText id="layoutName" @bind-Value="@newLayout.LayoutName" class="form-control" />
                    <ValidationMessage For="@(() => newLayout.LayoutName)" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" @onclick="CloseModal" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </EditForm>
</Modal>


