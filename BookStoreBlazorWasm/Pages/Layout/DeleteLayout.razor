@inherits LayoutBase
@using BookStoreBlazorWasm.Components


        <BlazoredModalContent>
            
            <div class="modal-body">
                <p>Are you sure you want to delete the following layouts?</p>
                <ul>
                    @foreach (var layoutName in SelectedLayoutNames)
                    {
                        <li>@layoutName</li>
                    }
                </ul>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                <button class="btn btn-danger" @onclick="Delete">Delete</button>
            </div>
        </BlazoredModalContent>


 @code{
    [Parameter] public List<string> SelectedLayoutNames { get; set; }
}
 