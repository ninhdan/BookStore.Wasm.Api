@attribute [Authorize("Admin")]
@inherits SupplierBase

        <BlazoredModalContent>
            
            <div class="modal-body">
                <p>Are you sure you want to delete the following suppliers?</p>
                <ul>
                    @foreach (var supplierName in SelectedSupplierNames)
                    {
                        <li>@supplierName</li>
                    }
                </ul>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                <button class="btn btn-danger" @onclick="Delete">Delete</button>
            </div>
        </BlazoredModalContent>


 @code{
    [Parameter] public List<string> SelectedSupplierNames { get; set; } 
}
 
