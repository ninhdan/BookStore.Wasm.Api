@page "/checkout"
@using System.Globalization
@inherits CheckoutBase
@layout LayoutBookDetail

<h3 class="mb-5"><b>Thủ tục thanh toán</b></h3>

<div class="row">
    <div class="col-md-6">

        <h4 class="mb-2">Thanh toán PayPal</h4>

        <div id="smart-button-container">
            <input type="hidden" name="descriptionInput" id="description" @bind="PaymentDescription" />
            <input name="amountInput" type="hidden" id="amount" @bind="PaymentAmount">
            <div style="text-align: center; margin-top: 0.625rem;" id="paypal-button-container"></div>
        </div>
    </div>
    @if (ShoppingCartItems == null)
    {
        <span>loading ...</span>

    }
    else
    {
        <div class="col-md-6">
            <h4 class="mb-2">Chi tiết thanh toán</h4>
            @if (ShoppingCartItems.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Giá</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in ShoppingCartItems)
                        {
                            <tr>

                                <td>@item.Quanlity x @item.Title</td>
                                <td>@(item.Grandtotal.ToString("N2") + " đ")</td>
                            </tr>
                        }
                        <tr>
                            <td><b>Tổng</b></td>
                            <td><b>@(PaymentAmount.ToString("N2") + " đ")</b></td>
                        </tr>

                    </tbody>


                </table>
            }
            else
            {
                <p>You currently have no items in your shopping cart</p>

            }

        </div>



    }
</div>


