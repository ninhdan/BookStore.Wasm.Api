@inherits PriceRangeBase
@attribute [Authorize("Admin")]
 
<Modal Title="Add New Language">
        <EditForm Model="@newLanguage" OnValidSubmit="@AddNewLanguage">
            <DataAnnotationsValidator />

            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col">
                        <label for="languageCode" class="form-label">Language Code</label>
                        <InputText id="languageCode" @bind-Value="@newLanguage.LanguageCode" class="form-control" />
                        <ValidationMessage For="@(() => newLanguage.LanguageCode)" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label for="languageName" class="form-label">Language Name</label>
                         <InputText id="languageName" @bind-Value="@newLanguage.LanguageName" class="form-control" />
                         <ValidationMessage For="@(() => newLanguage.LanguageName)" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" @onclick="CloseModal" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </EditForm>
    </Modal>
